#
# return the  ID of the UCP instance running on this machine
#
ucp_version=$1
ucp_id=$(docker container run --log-driver none --rm  --name ucp   -v /var/run/docker.sock:/var/run/docker.sock   docker/ucp:{{detected_ucp_version}} id )
echo $ucp_id
